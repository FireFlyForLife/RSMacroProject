<Window x:Class="RSMacroProgram.Windows.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSMacroProgram.Windows"
        mc:Ignorable="d"
        Title="InputDialog" Height="134" Width="307">
    <Grid >
        <TextBox x:Name="UserInput" Height="30" Width="200" Margin="50,10,49,63"/>
        <StackPanel Margin="0,45,0,0" HorizontalAlignment="Center" VerticalAlignment="Stretch">
            <Button x:Name="CancelButton" Content="Cancel" Height="30" Width="50" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="124,10,125,0" />

            <Button x:Name="OkButton" Content="Ok" Height="30" Width="50" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,10,0,0" />

        </StackPanel>
    </Grid>
</Window>
